import java.io.*;
import java.util.*;
import java.util.jar.*;

try
{
    File file = new File( basedir, "target/har-basic-test-1.0-SNAPSHOT.har" );
    if ( !file.exists() || file.isDirectory() )
    {
        System.err.println( "Could not find generated har: " + file );
        return false;
    }
    
    JarFile jarFile = new JarFile(file);
    JarEntry descEntry = jarFile.getJarEntry("META-INF/jboss-hibernate.xml");
    if ( descEntry == null )
    {
    	System.err.println("Could not find descriptor: META-INF/jboss-hibernate.xml");
    	return false;
    }
    
    InputStream descStream = jarFile.getInputStream(descEntry);
    BufferedReader descReader = new BufferedReader(new InputStreamReader(descStream));
    String line = null;
    boolean foundArtifactId = false;
    
    while ( (line = descReader.readLine()) != null )
    {
    	foundArtifactId = line.indexOf("har-basic-test") > -1;
    	if ( foundArtifactId ) break;
    }
    
    if ( !foundArtifactId )
    {
    	System.err.println("Didn't find artifactId in descriptor: " +
    		"META-INF/jboss-hibernate.xml, resource filtering failed");
    	return false;
    }
}
catch( Throwable t )
{
    t.printStackTrace();
    return false;
}

return true;
